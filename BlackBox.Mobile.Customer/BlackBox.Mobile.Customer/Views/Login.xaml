<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlackBox.Mobile.Customer.Views.Login"
             xmlns:sys="clr-namespace:System;assembly=mscorlib" Title="Entrar em Meu BlackBox"
             xmlns:local="clr-namespace:BlackBox.Mobile.Customer.Custom;assembly=BlackBox.Mobile.Customer">

  <ScrollView>
    <!-- Colocar relative layout -->
    <StackLayout Padding="5" HorizontalOptions="Center" VerticalOptions="Center"  WidthRequest="300">
      <ActivityIndicator x:Name="ProgressEntrando" Color="Blue" IsRunning="True" IsVisible="False" HeightRequest="50" WidthRequest="50" />
      <Label FontSize="20" TextColor="#3498DB" Text="Entre com seu Id:"/>
      <Entry x:Name="CustomerId" FontSize="Medium"  Keyboard="Numeric" />
      <Button x:Name="Entrar" Text="Entrar"/>
    </StackLayout>
  </ScrollView>
</ContentPage>